    <style name="bottomDialog.Animation" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/taanlate_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/taanlate_dialog_out</item>
    </style>

</resources>
